    </header>

    <nav>
        <ul>
            @if (CurrentPage == Tabs.Home)
            {
                <li class="active"><a href="/">Accueil</a></li>
            }
            else
            {
                <li><a href="/">Accueil</a></li>
            }
            @if (CurrentPage == Tabs.Projects)
            {
                <li class="active"><a href="/projets">Projets</a></li>
            }
            else
            {
                <li><a href="/projets">Projets</a></li>
            }
            @if (CurrentPage == Tabs.Studies)
            {
                <li class="active"><a href="/etudes">Études</a></li>
            }
            else
            {
                <li><a href="/etudes">Études</a></li>
            }
            @if (CurrentPage == Tabs.Experiences)
            {
                <li class="active"><a href="/experiences">Expériences</a></li>
            }
            else
            {
                <li><a href="/experiences">Expériences</a></li>
            }
            @if (CurrentPage == Tabs.Contact)
            {
                <li class="active"><a href="/contact">Contact</a></li>
            }
            else
            {
                <li><a href="/contact">Contact</a></li>
            }
